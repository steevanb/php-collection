#!/usr/bin/env sh

set -eu

if [ $(which docker || false) ]; then
    readonly projectDir=$(realpath $(dirname $(realpath $0))/..)
    docker run \
        --rm \
        -v ${projectDir}:/app:ro \
        -w /app \
        php:7.4.13-cli-buster \
        bin/phpunit
else
    vendor/bin/phpunit --bootstrap vendor/autoload.php --do-not-cache-result --colors=always tests
fi
