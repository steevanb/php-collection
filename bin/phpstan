#!/usr/bin/env sh

set -eu

if [ $(which docker || false) ]; then
    readonly projectDir=$(realpath $(dirname $(realpath $0))/..)
    docker \
        run \
            --rm \
            -it\
            -v ${projectDir}:/app:ro \
            -w /app \
            steevanb/php-typed-array-ci:3.0.0 \
            bin/phpstan
else
    phpstan analyse --ansi -c phpstan.neon
fi
