#!/usr/bin/env sh

set -eu

if [ $(which docker || false) ]; then
    readonly projectDir=$(realpath $(dirname $(realpath $0))/..)
    docker run \
        --rm \
        -v ${projectDir}:/app:ro \
        -w /app \
        php:7.3.26-cli-buster \
        bin/phpunit73
else
    vendor/bin/phpunit --bootstrap vendor/autoload.php --colors=always tests
fi
