#!/usr/bin/env sh

set -eu

readonly rootDir="$(realpath $(dirname $(realpath $0))/../..)"

title() {
    echo "\n\e[34m${1}\e[0m"
}

title "Symfony 4.4"
${rootDir}/bin/ci/phpunitBridgeSymfony44

