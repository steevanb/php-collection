#!/usr/bin/env sh

set -eu

if [ $(which docker || false) ]; then
    readonly rootDir=$(realpath $(dirname $(realpath $0))/../..)
    docker \
        run \
            --rm \
            -v ${rootDir}:/app:ro \
            -w /app \
            php:8.0.10-cli-alpine3.14 \
            bin/ci/phpunitPhp80 \
            "${@}"
else
    vendor/bin/phpunit --bootstrap vendor/autoload.php --colors=always tests "${@}"
fi
